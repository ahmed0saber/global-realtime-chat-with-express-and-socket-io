<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='UTF-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title>Real Time Chat</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Glory&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='./style.css'>
</head>
<body>
    <header>
        <h3>Real Time Chat</h3>
    </header>
    <div class="chat-container">
        <% messages.forEach(message => { %>
            <div class="msg-container">
                <p><b>user:</b> <%= message.username %></p>
                <p><b>msg:</b> <%= message.msg %></p>
                <p><b>date:</b> <%= message.date %></p>
            </div>
        <% }) %>
    </div>
    <div class="controls-container">
        <div class="inputs-container">
            <input type="text" class="username-input" placeholder="Enter your name">
            <input type="text" class="msg-input" placeholder="Enter your message">
        </div>
        <button onclick="sendMsg()">send</button>
    </div>
</body>
<script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
<script src='./script.js'></script>
</html>